{
  "include": ["./src"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
